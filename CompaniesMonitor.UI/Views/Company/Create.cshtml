@model Company
@{
    ViewData["Title"] = "Add Company";
  
}
<!-- Your view content here -->
@if (ViewBag.ToastMessage != null && (bool)TempData["ShowToast"])
{
    @foreach (var error in ViewBag.ToastMessage)
    {
        <script>
            toastr.options = {
                "positionClass": "toast-top-left",
                "timeOut": "3000", // Toast will disappear after 3 seconds
            }

            toastr.error("@error");

        </script>

    }
}


<!-- Rest of your view content -->

<form asp-controller="Company" asp-action="Create" method="post" >
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div style="text-align: center;">
                        <h4 class="card-title">Company</h4>
                </div>
                <div class="card-body">
                    <div class="row g-5">
                        <div class="col-12">
                            <fieldset class="form-fieldset">
                                    <div class="row row-cards">

                                        <div class="mb-3 col-4">
                                            <label class="form-label required" asp-for="EnglishName">English Name</label>
                                            <input class="form-control" asp-for="EnglishName">
                                        </div>

                                        <div class="mb-3 col-4">
                                            <label class="form-label required" asp-for="ArabicName">Arabic Name</label>
                                            <input class="form-control" asp-for="ArabicName">
                                        </div>

                                        <div class="mb-3 col-4">
                                            <label class="form-label required" asp-for="CompanyType">Company Type</label>
                                            <select class="form-select" asp-for="CompanyType" asp-items="ViewBag.CompaniesType">
                                            </select>
                                        </div>


                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="Number">Registration Number</label>
                                            <input class="form-control" asp-for="Number">
                                        </div>


                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="CapitalJD">Capital JD</label>
                                            <input class="form-control" asp-for="CapitalJD">
                                        </div>


                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="Nationality">Nationality</label>
                                            <input class="form-control" asp-for="Nationality">
                                        </div>

                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="NationalID">National ID</label>
                                            <input class="form-control" asp-for="NationalID">
                                        </div>
                                  

                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="CreatedDate">Registration certificate from</label>
                                            <input class="form-control" asp-for="CreatedDate" value="2023-01-01">
                                        </div>

                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="CloseDate">Registration certificate to</label>
                                            <input value="2023-01-01" class="form-control" asp-for="CloseDate">
                                        </div>



                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="EnglishNotes">English Notes</label>
                                            <textarea class="form-control" asp-for="EnglishNotes" rows="4"></textarea>
                                        </div>

                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="ArabicNotes">ArabicNotes</label>
                                            <textarea class="form-control" asp-for="ArabicNotes" rows="4"></textarea>
                                        </div>


                                        <div class="card-footer text-end mt-4">
                                            <div class="d-flex">
                                                <a asp-controller="Company" asp-action="Index" class="btn btn-link">Cancel</a>
                                                <button type="submit" class="btn btn-primary ms-auto">Add</button>
                                            </div>
                                        </div>
                                    </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</form>