@model MSGCompaniesMonitor.ViewModels.CompanyCreateViewModel
@{
    ViewData["Title"] = "Add Company";
  
   // ViewData.TemplateInfo.HtmlFieldPrefix = "DocumentesType";

}
<!-- Your view content here -->
@if (TempData["ShowToast"] != null && (bool)TempData["ShowToast"])
{
    @foreach (var error in (List<string>)TempData["ToastMessage"])
    {
        <script>
            toastr.options = {
                "positionClass": "toast-top-left",
                "timeOut": "3000", // Toast will disappear after 3 seconds
            }

            toastr.error("@error");

        </script>
    }
}

<!-- Rest of your view content -->

<form asp-controller="Company" asp-action="Create" method="post" >
