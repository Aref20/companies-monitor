                                                    {
                                                        <div class="container row">

                                                            <div class="mb-4 col-3">
                                                                <label class="form-label required" asp-for="@Model.companyPartners[i].PartnerId">Partner</label>
                                                                <select asp-for="@Model.companyPartners[i].PartnerId" asp-items="@Model.Partners" class="form-select">
                                                                </select>
                                                            </div>

                                                            <div class="mb-3 col-3">
                                                                <label class="form-label required" asp-for=@Model.companyPartners[i].SharedJD>SharedJD</label>
                                                                <input class="form-control" asp-for=@Model.companyPartners[i].SharedJD>
                                                            </div>


                                                            <div class=" col-1 " style="margin-top: 27px;">
