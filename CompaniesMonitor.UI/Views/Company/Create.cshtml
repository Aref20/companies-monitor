                                        </div>

                                        <div class="mb-3 col-6">
                                            <label class="form-label" asp-for="company.ArabicNotes">ArabicNotes</label>
                                            <textarea class="form-control" asp-for="company.ArabicNotes" rows="4"></textarea>
                                        </div>


