@model MSGCompaniesMonitor.ViewModels.DocumentTypeDeleteViewModel
@{
    ViewData["Title"] = "Delete Document Type";
}
<!-- Your view content here -->
@if (Model.ShowToast != null && (bool)Model.ShowToast)
{
    @foreach (var error in Model.ToastMessage)
    {
        <script>
            toastr.options = {
                "positionClass": "toast-top-left",
                "timeOut": "3000", // Toast will disappear after 3 seconds
            }

            toastr.error("@error");

        </script>

    }
}

<!-- Rest of your view content -->

<form asp-controller="DocumentType" asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div style="text-align: center;">
                        <h4 class="card-title">Documents type</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-5">
                            <div class="col-xl-4"></div>
                            <div class="col-xl-4">
                                <fieldset class="form-fieldset">

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="documentType.Company">Company</label>
                                        <select disabled class="form-select" asp-for="documentType.Company" asp-items="Model.Companies">
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="documentType.Document">Document</label>
                                        <select disabled class="form-select" asp-for="documentType.Document" asp-items="Model.Documents">
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="documentType.Amount">Amount</label>
                                        <input readonly class="form-control" asp-for="documentType.Amount">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="documentType.StartDate">Start Date</label>
                                        <input readonly class="form-control" asp-for="documentType.StartDate">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="documentType.ExpireyDate">Expirey Date</label>
                                        <input readonly class="form-control" asp-for="documentType.ExpireyDate">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="documentType.Files">File</label>
                                        <input readonly class="form-control" asp-for="documentType.Files" multiple>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Selected File:</label>
                                        @foreach (var file in Model.uploadedFiles)
                                        {
                                            <a href="~/Documents/@file.FileName">@file.FileName</a>
                                            <br />

                                        }
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" asp-for="documentType.Note">Note</label>
                                        <textarea readonly class="form-control" asp-for="documentType.Note" rows="6"></textarea>
                                    </div>

                                    <div class="card-footer text-end mt-4">
                                        <div class="d-flex">
                                            <a asp-controller="DocumentType" asp-action="index" class="btn btn-link">Cancel</a>
                                            <button  type="submit" class="btn btn-danger ms-auto">Delete</button>
                                        </div>
                                    </div>

                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>