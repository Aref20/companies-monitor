@model DocumentType
@{
    ViewData["Title"] = "Add Document Type";
}
<!-- Your view content here -->
@if (ViewBag.ToastMessage != null && (bool)TempData["ShowToast"])
{
    @foreach (var error in ViewBag.ToastMessage)
    {
        <script>
            toastr.options = {
                "positionClass": "toast-top-left",
                "timeOut": "3000", // Toast will disappear after 3 seconds
            }

            toastr.error("@error");

        </script>

    }
}

<!-- Rest of your view content -->

<form asp-controller="DocumentType" asp-action="Create" method="post" enctype="multipart/form-data">
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div style="text-align: center;">
                    <h4 class="card-title">Documents type</h4>
                </div>
                <div class="card-body">
                    <div class="row g-5">
                        <div class="col-xl-4"></div>
                        <div class="col-xl-4">
                            <fieldset class="form-fieldset">

                                <div class="mb-3">
                                        <label class="form-label required" asp-for="Company">Company</label>
                                        <select class="form-select" asp-for="Company" asp-items="ViewBag.Companies">
                                        </select>
                                </div>

                                <div class="mb-3">
                                        <label class="form-label required" asp-for="Document">Document</label>
                                        <select class="form-select" asp-for="Document" asp-items="ViewBag.Documents">
                                        </select>
                                </div>

                                 <div class="mb-3">
                                        <label class="form-label required" asp-for="Amount">Amount</label>
                                        <input class="form-control" asp-for="Amount">
                                 </div>

                                <div class="mb-3">
                                        <label class="form-label required" asp-for="StartDate">Start Date</label>
                                        <input class="form-control" asp-for="StartDate" value="2023-01-01">
                                </div>

                                <div class="mb-3">
                                        <label class="form-label required" asp-for="ExpireyDate">Expirey Date</label>
                                        <input class="form-control" asp-for="ExpireyDate" value="2023-01-01">
                                 </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="Files">File</label>
                                        <input type="file" class="form-control" asp-for="Files" multiple>
                                    </div>



                                    <div class="mb-3">
                                        <label class="form-label" asp-for="Note">Note</label>
                                        <textarea class="form-control" asp-for="Note" rows="6"></textarea>
                                    </div>

                                    <div class="card-footer text-end mt-4">
                                        <div class="d-flex">
                                            <a  asp-controller="DocumentType" asp-action="index" class="btn btn-link">Cancel</a>
                                            <button type="submit" class="btn btn-primary ms-auto">Add</button>
                                        </div>
                                    </div>

                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</form>