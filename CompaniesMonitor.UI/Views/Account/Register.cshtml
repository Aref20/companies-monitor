@model User
@{
    ViewData["Title"] = "Register";
}
<!-- Your view content here -->
@if (ViewBag.ShowToast != null && (bool)ViewBag.ShowToast)
{
    @foreach (var error in ViewBag.ToastMessage)
    {
        <script>
            toastr.options = {
                "positionClass": "toast-top-left",
                "timeOut": "3000", // Toast will disappear after 3 seconds
            }

            toastr.error("@error");

        </script>

    }
}

<div class="page page-center">
    <div class="container container-tight py-4">
        <form class="card card-md" asp-action="Register" asp-controller="Account">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Add new user</h2>
                <div class="mb-3">
                    <label class="form-label" asp-for="Name">Name</label>
                    <input type="text" class="form-control required" placeholder="Enter name" asp-for="Name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="UserName">Email address</label>
                    <input type="email" class="form-control required" placeholder="Enter email" asp-for="UserName" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="PasswordHash">Password</label>
                    <div class="input-group input-group-flat">
                        <input type="password" class="form-control required" placeholder="Password" autocomplete="off" asp-for="PasswordHash" required>
                    </div>
                </div>

                <div class="form-footer">
                    <button type="submit" class="btn btn-primary w-100">Add new user</button>
                </div>
            </div>
        </form>
    </div>
</div>