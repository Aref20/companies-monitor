@model Partner
@{
    ViewData["Title"] = "Edit Partner";
}
<!-- Your view content here -->
@if (ViewBag.ShowToast != null && (bool)ViewBag.ShowToast)
{
    @foreach (var error in ViewBag.ToastMessage)
    {
        <script>
            toastr.options = {
                "positionClass": "toast-top-left",
                "timeOut": "3000", // Toast will disappear after 3 seconds
            }

            toastr.error("@error");

        </script>

    }


}

<!-- Rest of your view content -->

<form asp-controller="Partner" asp-action="Edit" method="post">
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div style="text-align: center;">
                        <h4 class="card-title">Partner</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-5">
                            <div class="col-xl-4"></div>
                            <div class="col-xl-4">
                                <fieldset class="form-fieldset">

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="EnglishName">English Name</label>
                                        <input class="form-control" asp-for="EnglishName">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="ArabicName">Arabic Name</label>
                                        <input class="form-control" asp-for="ArabicName">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="SharedJD">SharedJD</label>
                                        <input class="form-control" asp-for="SharedJD">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required" asp-for="Percentage">Percentage</label>
                                        <input class="form-control" asp-for="Percentage" readonly>
                                    </div>

                                    <div class="card-footer text-end mt-4">
                                        <div class="d-flex">
                                            <a asp-controller="Partner" asp-action="Index" class="btn btn-link">Cancel</a>
                                            <button type="submit" class="btn btn-primary ms-auto">Edit</button>
                                        </div>
                                    </div>

                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>